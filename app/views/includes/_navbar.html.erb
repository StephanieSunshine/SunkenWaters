<% current_path = [controller.controller_name, controller.action_name].join('#') %>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/">Sunken Waters</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item <%= 'active' if current_path.eql?('visitor#index') %>">
        <%= current_path.eql?('visitor#index') ? link_to(raw('Blog <span class="sr-only">(current)</span>'), '/', class: 'nav-link') : link_to('Blog', '/', class: 'nav-link') %>
      </li>
      <li class="nav-item <%= 'active' if current_path.eql?('visitor#rules') %>">
        <%= current_path.eql?('visitor#rules') ? link_to(raw('Rules <span class="sr-only">(current)</span>'), '/rules', class: 'nav-link') : link_to('Rules', '/rules', class: 'nav-link') %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item <%= 'active' if controller.controller_name.eql?('game') %>">
          <%= controller.controller_name.eql?('game') ? link_to(raw('Play <span class="sr-only">(current)</span>'), '/game', class: 'nav-link') : link_to('Play', '/game', class: 'nav-link') %>
        </li>
        <li class="nav-item <%= 'active' if current_path.eql?('registrations#edit') %>">
          <%= current_path.eql?('registrations#edit') ? link_to(raw('Profile <span class="sr-only">(current)</span>'), edit_user_registration_path, class: 'nav-link') : link_to('Profile', edit_user_registration_path, class: 'nav-link') %>
        </li>
        <li class="nav-item">
          <%= link_to("Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link') %>
        </li>
      <% else %>
      <li class="nav-item <%= 'active' if current_path.eql?('registrations#new') %>">
        <%= current_path.eql?('registrations#new') ? link_to(raw('Join <span class="sr-only">(current)</span>'), new_user_registration_path, class: 'nav-link') : link_to('Join', new_user_registration_path, class: 'nav-link') %>
      </li>
      <li class="nav-item <%= 'active' if current_path.eql?('sessions#new') %>">
        <%= current_path.eql?('sessions#new') ? link_to(raw('Sign In <span class="sr-only">(current)</span>'), new_user_session_path, class: 'nav-link') : link_to('Sign In', new_user_session_path, class: 'nav-link') %>
      </li>
      <% end %>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" placeholder="Search" type="text">
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
